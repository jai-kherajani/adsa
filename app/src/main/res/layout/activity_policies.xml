<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".PoliciesActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/policies_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="16dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:text="Policies"
        android:textStyle="bold"></TextView>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp">

        <TableRow>

            <TextView
                android:id="@+id/newid"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:text=">"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:text="Privilege Leaves (PL)"
                android:textStyle="bold"></TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:text="  •"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:text="Privilege Leave begins accruing on your first day as a regular, full-time employee at AppDirect and accrues monthly."></TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:text="  •"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:text="Privilege Leave is 21 days per year and accrued on a monthly basis (at month-end). Accrual and carry forwarding is capped at 42 Privilege Leave days at any time of the year and accrual will only resume once your balance falls below this amount."></TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/newid1"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:text=">"
                android:layout_marginTop="40dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:text="Sick Leaves (SL)"
                android:textStyle="bold"
                android:layout_marginTop="40dp"></TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:text="  •"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:text="AppDirect provides 5 paid sick leaves to eligible employees in accordance with applicable law and it should be availed during the Calendar year."></TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:text="  •"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:text="Sick Leaves are neither carry forwarded to next year nor en-cashed."></TextView>
        </TableRow>


        <TableRow>

            <TextView
                android:id="@+id/newid3"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:text=">"
                android:layout_marginTop="40dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:text="Bereavement Leaves"
                android:textStyle="bold"
                android:layout_marginTop="40dp"></TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:text="  •"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:text="A new parent has the right to take paternity leave of up 5 days of paid time off work."></TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:text="  •"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:text="Paternity Leave can be availed by the Birth Parent no later than 60 days after the birth of the baby."></TextView>
        </TableRow>
    </TableLayout>

</RelativeLayout>